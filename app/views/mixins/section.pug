mixin experienceItem(experience)
    span.font-semibold= experience.position
    |
    | &mdash;
    | 
    a(href=experience.company.link)= experience.company.name
    | 
    span.italic= experience.location

mixin educationItem(education)
    span.font-semibold #{education.degree} in #{education.domain} 
    | 
    | &mdash;
    | 
    a(href=education.school.link)= education.school.name
    |  
    span.italic= education.location



mixin item(data, type)
    .flex.flex-col.justify-between.text-justify.m-2
        p
            case type 
                when "experience"
                    +experienceItem(data)
                when "education"
                    +educationItem(data)

        if  Array.isArray(data.description)
            ul.ml-4 
                each item in data.description 
                    li.text-sm= item

mixin section(data, type)
    .my-4
        +title(2, type)
        .content.flex.flex-col-reverse
        each value in data
            +item(value, type)

mixin miscSection(data)
    each value, key in data
        +title(2, key)
        ul.ml-8
            if Array.isArray(value)
                each item in value
                    li.capitalize= item
            else if typeof value === "object"
                each item, key in value 
                    li.capitalize #{key}: #{item}
            else 
                li.capitalize= value